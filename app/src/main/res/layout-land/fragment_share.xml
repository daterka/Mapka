<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
>


    <Button
            android:text="@string/send_sms"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button"
            android:background="@drawable/button_border_2"
            android:layout_below="@id/number_text"
            android:paddingHorizontal="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/number_text"
            android:layout_below="@id/textView2"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="50sp"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:layout_marginTop="50dp"/>
    <TextView
            android:text="@string/Share_localization"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_alignParentEnd="true"
            android:layout_marginEnd="0sp"
            android:layout_marginTop="50sp" android:layout_alignParentTop="true" android:textStyle="bold"
            android:textAlignment="center" android:textSize="30sp"
            android:layout_alignParentStart="true" android:layout_marginStart="0sp"
            android:layout_width="match_parent"/>
    <ImageButton
            android:layout_width="46sp"
            android:layout_height="47sp"
            app:srcCompat="@drawable/contacts_button"
            android:id="@+id/contact_picker"
            android:scaleType="fitXY"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/textView2"
            android:adjustViewBounds="true"
            android:background="@drawable/black_transparent_pixel"
            android:layout_toRightOf="@id/number_text"
            android:layout_marginLeft="70dp"/>
</RelativeLayout>