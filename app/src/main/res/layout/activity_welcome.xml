<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.WelcomeActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_text_view"
            android:text="@string/WELCOME_TEXT"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
            android:layout_width="251dp"
            android:layout_height="394dp"
            android:id="@+id/logo_image_view"
            android:padding="10sp"
            android:src="@drawable/logo4"
            android:contentDescription="LOGO"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.423"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DESCRIPTION_TEXT"
            android:textSize="20sp"
            android:textAlignment="center"
            android:padding="10sp"
            android:id="@+id/description_text_view"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="@string/START_BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/colorPaleVioletRed"
            android:background="@drawable/button_border"
            android:textAlignment="center"
            android:includeFontPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onButtonClickStart"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PL_ENG"
            android:textSize="15sp"
            android:textAlignment="center"
            android:padding="10sp"
            android:textColor="@color/colorRoyalBlue"
            android:textStyle="bold"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/pl_eng_switch"
            app:layout_constraintHorizontal_bias="1.0"/>

    <Switch
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/pl_eng_switch"/>

</androidx.constraintlayout.widget.ConstraintLayout>